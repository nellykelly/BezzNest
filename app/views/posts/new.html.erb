<%= form_for(:post, :method => :post, :url =>{:action => :create}) do |form| %>
	<div class = "p" >
		<%=label_tag(:title)%>
		<%=text_field_tag(:title)%> <br>
		<%=label_tag(:content)%>
		<%=form.text_area(:content)%> <br>



	  	<div class="form-group">
	    	<%= form.label "image title" %>
	    	<%= form.text_field :title, class: 'form-control' %>
	 	</div>

	  	<div class="form-group">
	    	<%= form.label :image %>
	  		<%= form.file_field :image, class: 'form-control'%>
	  	</div>

		<%=submit_tag('Create new Post') %>
	</div>
<% end%>