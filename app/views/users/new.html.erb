<%= form_for(:user, :method => :post, :url =>{:action => :create}) do |form| %>
	<%=label_tag(:login)%>
	<%=text_field_tag(:login)%>
	<%=label_tag(:password)%>
	<%=text_field_tag(:password)%>
	<%=label_tag('Company name')%>
	<%=text_field_tag(:company)%>
	<%=label_tag('Company type')%>
	<%=text_field_tag(:company_type)%>
	<%=label_tag('Founding year')%>
	<%=text_field_tag(:year_founded)%>
	<%=submit_tag('Create new Company') %>
<% end%>