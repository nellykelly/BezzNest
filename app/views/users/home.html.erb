 <%= stylesheet_link_tag("application") %>
 <%= stylesheet_link_tag("homescreen") %>
<% for post in @posts %>
	<div class="">
	<!-- trying out new stuff untill line 11 -->
		<div class="panel">
			<div class="panel-default">
				<div class="panel-heading"><h4><%= post.title %></h4></div>
        			<div class="panel-body">
       					<p> <%= post.content %></p>
       					<%= link_to post.user.login, "/users/view/#{post.user.id}" %>                          
					</div>
			</div>
		</div>
		
		<div class="text-center"> 
		<div class="comment">
			<% for comment in post.comments %>
			<%= comment.content %>
				<p> commented by <%= comment.user.login %></p>  
			<% end%>
		</div>
		meep
		
		<%if post.photo != nil %>
			<div class="media">
			  <div class="media-left">
			    <%= link_to image_tag(post.photo.image.url(:thumb), class: 'media-object'), post.photo.image.url, target: '_blank' %>
			  </div>
			  <div class="media-body">
			    <h4 class="media-heading"><%= post.photo.title %></h4>
			  </div>
			</div>
		<% end %>
		moop
	<%= form_for(:comment, :method => :post, :url =>"/posts/#{post.id}/comment") do |form| %>

		<p>   <%=form.text_area(:comment)%></p>
		<%=submit_tag('Comment') %>
		
	<% end%>
	</div>
	</div>
	
<% end%>

	


